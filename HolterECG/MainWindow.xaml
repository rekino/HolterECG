<Window Style="{StaticResource window}" x:Class="HolterECG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:HolterECG"
        Title="MainWindow" Height="768" Width="1024">
    <Window.DataContext>
        <local:SignalSource />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Row="0" Grid.Column="0">
            <Button Style="{StaticResource btn-menu}">Add Patient</Button>
            <Button Style="{StaticResource btn-menu}">Open Patient</Button>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Button Style="{StaticResource btn-menu}" Grid.Row="0" Grid.Column="0">Import</Button>
                <Button Style="{StaticResource btn-menu}" Grid.Row="0" Grid.Column="1">Export</Button>
            </Grid>
            <Button Style="{StaticResource btn-menu}">Print</Button>
            <Button Style="{StaticResource btn-menu}">Add Report</Button>
            <Button Style="{StaticResource btn-menu}">Settings</Button>
            <Button Style="{StaticResource btn-menu}">Help</Button>
            <Button Style="{StaticResource btn-menu}">Manual Blood Pressuring</Button>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="2">
            <Button Style="{StaticResource btn}">U</Button>
            <Button Style="{StaticResource btn}">U</Button>
            <Button Style="{StaticResource btn}">U</Button>
            <Button Style="{StaticResource btn}">U</Button>
        </StackPanel>
        <oxy:Plot Title="Example" Margin="5" Grid.Row="0" Grid.Column="1">
            <oxy:Plot.Series>
                <oxy:LineSeries ItemsSource="{Binding Points}" />
            </oxy:Plot.Series>
        </oxy:Plot>
    </Grid>
</Window>
