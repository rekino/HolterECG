<Window Style="{StaticResource window}" x:Class="HolterECG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="MainWindow" Height="768" Width="1024">
    <Window.DataContext>
        <Binding Source="{StaticResource state}" />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Row="0" Grid.Column="0">
            <Button Name="btnAddPatient" Style="{StaticResource btn-menu}" Click="btnAddPatient_Click">Add Patient</Button>
            <Button Style="{StaticResource btn-menu}">Open Patient</Button>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Button Style="{StaticResource btn-menu}" Grid.Row="0" Grid.Column="0">Import</Button>
                <Button Style="{StaticResource btn-menu}" Grid.Row="0" Grid.Column="1">Export</Button>
            </Grid>
            <Button Name="btnPrint" Style="{StaticResource btn-menu}" Click="btnPrint_Click">Print</Button>
            <Button Style="{StaticResource btn-menu}">Add Report</Button>
            <Button Style="{StaticResource btn-menu}">Settings</Button>
            <Button Style="{StaticResource btn-menu}">Help</Button>
            <Button Style="{StaticResource btn-menu}">Manual Blood Pressuring</Button>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="2">
            <Button Style="{StaticResource btn}" Click="Button_Click">U</Button>
            <Button Style="{StaticResource btn}">U</Button>
            <Button Style="{StaticResource btn}">U</Button>
            <Button Style="{StaticResource btn}">U</Button>
        </StackPanel>
        <Frame Name="frmContent" Grid.Row="0" Grid.Column="1" NavigationUIVisibility="Hidden" Padding="10,0,10,0"/>
    </Grid>
</Window>
