                    <TextDecorationCollection>
                        <TextDecoration>
                            <TextDecoration.Pen>
                                <Pen Thickness="1" Brush="Black">
                                    <Pen.DashStyle>
                                        <DashStyle Dashes="2,2,0,2" />
                                    </Pen.DashStyle>
                                </Pen>
                            </TextDecoration.Pen>
                        </TextDecoration>
                    </TextDecorationCollection>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="value" TargetType="Run">
            <Setter Property="Foreground" Value="Black" />
        </Style>
